<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragments.settings.SettingsFragment">

    <TextView
        android:id="@+id/lengthOfPomoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/length_of_pomo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/sbLengthOfPomodoro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:min="15"
        android:max="50"
        android:progress="25"
        app:layout_constraintTop_toBottomOf="@id/lengthOfPomoText"
        app:layout_constraintEnd_toStartOf="@+id/tvLengthOfPomo"/>

    <TextView
        android:id="@+id/tvLengthOfPomo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sbLengthOfPomodoro"
        app:layout_constraintBottom_toBottomOf="@id/sbLengthOfPomodoro"/>

    <TextView
        android:id="@+id/lengthOfBreakText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/length_of_break"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/sbLengthOfPomodoro"
        app:layout_constraintStart_toStartOf="@id/lengthOfPomoText"/>

    <SeekBar
        android:id="@+id/sbLengthOfBreak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:min="5"
        android:max="30"
        android:progress="5"
        app:layout_constraintTop_toBottomOf="@id/lengthOfBreakText"
        app:layout_constraintEnd_toStartOf="@+id/tvLengthOfBreak"/>

    <TextView
        android:id="@+id/tvLengthOfBreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sbLengthOfBreak"
        app:layout_constraintBottom_toBottomOf="@id/sbLengthOfBreak"/>

    <TextView
        android:id="@+id/tvAutomaticStartBreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/automatic_start_of_the_break"
        app:layout_constraintTop_toBottomOf="@id/sbLengthOfBreak"
        app:layout_constraintStart_toStartOf="@id/lengthOfPomoText"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/swAutomaticStartBreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvAutomaticStartBreak"
        app:layout_constraintBottom_toBottomOf="@+id/tvAutomaticStartBreak"/>

</androidx.constraintlayout.widget.ConstraintLayout>